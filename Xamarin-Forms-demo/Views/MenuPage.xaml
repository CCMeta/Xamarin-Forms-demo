<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_Forms_demo.Views.MenuPage"
             Visual=""
             Title="MenuPage">
    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Frame Grid.Row="0" BorderColor="Orange" CornerRadius="10" HasShadow="True" Padding="15">
            <StackLayout Orientation="Horizontal">
                <Image Source="{Binding avatar}" HeightRequest="50"/>
                <Label Text="{Binding username}" FontSize="Medium" VerticalOptions="Center"/>
                <Button x:Name="WebSocketStateLabel" FontSize="Medium" VerticalOptions="Center"/>
                <Label Text="&#xf054;" FontSize="25" FontFamily="FontAwesome5Solid" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
            </StackLayout>
        </Frame>

        <Frame Grid.Row="1" BorderColor="Orange" CornerRadius="10" HasShadow="True">
            <TableView Intent="Menu">
                <TableRoot>
                    <TableSection Title="NAVIGATION">
                        <ViewCell x:Name="NavStudyViewCell">
                            <StackLayout Orientation="Horizontal">
                                <Label Text="&#xf5da;" FontSize="Medium" FontFamily="FontAwesome5Solid"  VerticalOptions="Center"/>
                                <Label Text="学习模式" FontSize="Medium" VerticalOptions="Center" />
                                <Label Text="&#xf054;" FontSize="Medium" FontFamily="FontAwesome5Solid" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </StackLayout>
                        </ViewCell>
                        <ViewCell x:Name="NavSNSViewCell">
                            <StackLayout Orientation="Horizontal">
                                <Label Text="&#xf086;" FontSize="Medium" FontFamily="FontAwesome5Solid"  VerticalOptions="Center"/>
                                <Label Text="社交模式" FontSize="Medium" VerticalOptions="Center" />
                                <Label Text="&#xf054;" FontSize="Medium" FontFamily="FontAwesome5Solid" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                    <TableSection Title="MAJORS">
                        <ViewCell>
                            <RadioButton Content="History" Value="History" GroupName="CurrentMajor" />
                        </ViewCell>
                        <ViewCell>
                            <RadioButton Content="Math" Value="Math" GroupName="CurrentMajor" />
                        </ViewCell>
                        <ViewCell>
                            <RadioButton Content="Chinese" Value="Chinese" GroupName="CurrentMajor" />
                        </ViewCell>
                        <ViewCell>
                            <RadioButton Content="English" Value="English" GroupName="CurrentMajor" />
                        </ViewCell>
                    </TableSection>
                    <TableSection>
                        <ViewCell>
                            <Button Text="退出登录" VerticalOptions="End"/>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
        </Frame>
    </Grid>
</ContentPage>