<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_Forms_demo.Views.MenuPage"
             Visual="Material"
             Title="MenuPage">
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Frame Grid.Row="0" BorderColor="Orange" CornerRadius="10" HasShadow="True">
            <Grid>
                <Image Grid.Column="0" Source="{Binding avatar}" HeightRequest="50"/>
                <Label Grid.Column="1" Text="{Binding username}" FontSize="25" VerticalOptions="Center" />
            </Grid>
        </Frame>

        <Frame Grid.Row="1" BorderColor="Orange" CornerRadius="10" HasShadow="True">
            <TableView Intent="Menu">
                <TableRoot>
                    <TableSection Title="NAVIGATION">
                        <ViewCell x:Name="NavStudyViewCell">
                            <Label TextColor="SteelBlue" VerticalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="&#xf5da;" FontSize="Medium" FontFamily="FontAwesome5Solid"/>
                                        <Span Text="  Study" FontSize="Large"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </ViewCell>
                        <ViewCell x:Name="NavSNSViewCell">
                            <Label TextColor="SteelBlue" VerticalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="&#xf086;" FontSize="Medium" FontFamily="FontAwesome5Solid"/>
                                        <Span Text="  SNS" FontSize="Large"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </ViewCell>
                    </TableSection>
                    <TableSection Title="MAJORS">
                        <ViewCell>
                            <RadioButton Content="History" Value="History" GroupName="CurrentMajor" />
                        </ViewCell>
                        <ViewCell>
                            <RadioButton Content="Math" Value="Math" GroupName="CurrentMajor" />
                        </ViewCell>
                        <ViewCell>
                            <RadioButton Content="Chinese" Value="Chinese" GroupName="CurrentMajor" />
                        </ViewCell>
                        <ViewCell>
                            <RadioButton Content="English" Value="English" GroupName="CurrentMajor" />
                        </ViewCell>
                    </TableSection>
                    <TableSection>
                        <ViewCell>
                            <Button Text="Dismiss" VerticalOptions="End"/>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
        </Frame>
    </Grid>
</ContentPage>